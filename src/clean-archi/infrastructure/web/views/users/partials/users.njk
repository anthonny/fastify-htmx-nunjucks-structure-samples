<div id="users" class="overflow-x-auto">
	<table class="min-w-full bg-white border border-gray-300">
		<thead class="bg-gray-100">
			<tr>
				<th class="px-6 py-3 border-b border-gray-300 text-left text-sm font-semibold text-gray-700">Name</th>
				<th class="px-6 py-3 border-b border-gray-300 text-left text-sm font-semibold text-gray-700">Lastname</th>
				<th class="px-6 py-3 border-b border-gray-300 text-left text-sm font-semibold text-gray-700">City</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
			<tr class="hover:bg-gray-50">
				<td class="px-6 py-4 border-b border-gray-300 text-sm text-gray-900">{{ user.name }}</td>
				<td class="px-6 py-4 border-b border-gray-300 text-sm text-gray-900">{{ user.lastname }}</td>
				<td class="px-6 py-4 border-b border-gray-300 text-sm text-gray-900">{{ user.city }}</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
